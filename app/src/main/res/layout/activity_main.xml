<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Information"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edt_student_id"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student ID : "
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/edt_student_name"
        android:layout_below="@id/edt_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Name : "
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_student_email"
        android:layout_below="@id/edt_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Email : "
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        />

    <Button
        android:id="@+id/btn_insert"
        android:layout_below="@id/edt_student_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_update"
        android:layout_below="@id/edt_student_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_DELETE"
        android:layout_below="@id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_fetch"
        android:layout_below="@id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FETCH"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>